{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Source",
      "type": "shell",
      "command": "nimble c src/kisuru.nim",
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Package",
      "type": "shell",
      "command": "nimble build --verbose",
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Execute Package",
      "type": "shell",
      "command": "nimble run kisuru"
    }
  ]
}
